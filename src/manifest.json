{
    "name": "Site Chat",
    "version": "1.0",
    "description": "A workflow automation tool for the web.",
    "manifest_version": 3,
    "minimum_chrome_version": "120",
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "sidePanel",
        "unlimitedStorage"
    ]
}